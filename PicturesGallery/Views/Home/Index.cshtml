@model IEnumerable<PicturesGallery.Models.PicturesTable>
@{
    ViewBag.Title = "Home Page";
}

    <script src="~/Scripts/gallery.handling.js"></script>
    <!-- Container for the image gallery -->
    <div class="container">
    @{
        int i = 1;

        foreach (var picture in Model)
        {
            if (!picture.PicturePath.Contains("wide"))
            {
                continue;
            }

            <div class="mySlides">
                <div class="numbertext">@i / 6</div>
                <img src="@Html.DisplayFor(modelItem => picture.PicturePath)" style="width: 100%">
            </div>
            i++;
        }
    }
    <!-- Full-width images with number text -->

    </div>

    <!-- Next and previous buttons -->
    <a class="prev" id="next-im" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" id="prev-im" onclick="plusSlides(1)">&#10095;</a>

    <!-- Image text -->
    <div class="caption-container">
        <p id="caption"></p>
    </div>

    <!-- Thumbnail images -->
    <div class="row">
            @{
                int num = 1;
                foreach (var picture in Model)
                {
                    if (!picture.PicturePath.Contains("thumbnails"))
                    {
                        continue;
                    }

                    <div class="column">
                        <img class="demo cursor" src="@Html.DisplayFor(modelItem => picture.PicturePath)"
                             style="width: 100%" onclick="currentSlide(@num)"
                             alt="@Html.DisplayFor(modelItem => picture.Description)">
                    </div>
                    num++;
                }
            }           
    </div> 